{aiming
	{border "dashed_line_white"}
	;{color dyellow} ; если цвет не указан, будет использован color_self из HUD2-палитры
}
{move_oriented
	{central "dot" {size 16 16}}
	{cap_near "basis" {size 32 64} {offset 16}}
	{cap_far "arrow" {size 64 64} {offset 160}}
}
{move_backward
	{border "dashed_line_white"}
	{cap_near "backward_arrow" {size 64 64} {offset 100}}
	{arc "dashed_line_white"}
}