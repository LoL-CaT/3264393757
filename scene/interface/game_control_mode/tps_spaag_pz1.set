(include "tps.inc")
{parameters
	{range_degrees "camera_pitch_min" 		-10	-10}
	{range_degrees "camera_pitch_max"		75	2}
	{range "camera_offset_up"		   2.9	2.7}   ; точка прицела относительно крыши машины
