{
	(include "/properties/trench.inc")
	{extension "trench_single_lie.mdl"}
	{props "sand" "camo2" "remove_grass_2_5"}
	("boneLand"  args "ground")
	("boneAlign" args "grass")
	{placer
		{place "1" {attach  open_lie} {group "battle"} {linkbone "attach1"}}
	}
	{boarder}
	{volume "pit_range"
		{able clear {obstacle 1}}
	}
	{volume "place"
		{Tags "1"}
		{able clear {touch 1}}
	}

	("volume_target_fg_ground")
	{extender "fortification"
		{tag "trench"}
		{path_profile "trench"}
		{next "trench_single_sit"}
		{interval_min 4} ; do not install closest than <interval_min> to others fortifications
		{socket "socket0"
			{accept "trench_grass_segment"}
			{replace "trench_grass_cell_right"} 			; если возможно присоединение к этому сокету, сегмент будет заменен на указанный
			{angle 100}
		}
		{socket "socket1"
			{accept "trench_grass_segment"}
			{replace "trench_grass_cell_left"} 			; если возможно присоединение к этому сокету, сегмент будет заменен на указанный
			{angle 100}
		}
		{socket "socket2"
			{accept "trench_grass_segment"}
			{replace "trench_grass_cell_back"} 			; если возможно присоединение к этому сокету, сегмент будет заменен на указанный
			{angle 100}
		}
		{install_time 4}	
		{install_pose "crawl"}	
	}
	{DecalOrder 15}
}
