{
	(include "/properties/trench.inc")
	{extension "trench_grass_cell_two_sided.mdl"}
	{props "sand" "camo2" "sand" "remove_grass_2_5"}
	{tag "trench" }				;для миссий		
	("boneLand"  args "ground")
	("boneAlign" args "grass")
	("boneLand"  args "ground_x")
	("boneAlign" args "grass_x")
	("boneLand"  args "ground_x0")
	("boneLand"  args "ground_x1")
	("volume_attach" args 2 20)
	("volume_attach" args 3 20)
	("volume_attach" args 4 33)

	("linkbones_for_attach_places")
	{placer
		{place "1" {obstacle disable} {attach snipe_cover} {linkbone "attach1"} {group "battle"} {block_on_collect "mg_stan maxim 4 browning browning_m2 mg34_sit"}}
		{place "2" {obstacle disable} {attach hide_squat} {linkbone "attach2"} {group "wait"}}
		{place "3" {obstacle disable} {attach hide_squat} {linkbone "attach3"} {group "wait"}}
		{place "4" {obstacle disable} {attach snipe_cover} {linkbone "attach4"} {group "battle_back"} {block_on_collect "1"}}
		{place "mg_stan" {obstacle disable} {attach snipe_cover} {linkbone "attach1"} {group "battle"} {accept "place_mg_stan"} {block_on_collect "maxim 1 4 browning browning_m2 mg34_sit"} {rotate_limit 45}}
		{place "maxim" {obstacle disable} {attach snipe_cover} {linkbone "attach_maxim"} {group "battle"} {accept "maxim"} {block_on_collect "mg_stan 1 4 browning browning_m2 mg34_sit"} {rotate_limit 45}}
		{place "browning" {obstacle disable} {attach snipe_cover} {linkbone "attach_browning"} {group "battle"} {accept "browning_stan"} {block_on_collect "maxim mg_stan 1 4 browning_m2 mg34_sit"} {rotate_limit 45}}
		{place "browning_m2" {obstacle disable} {attach snipe_cover} {linkbone "attach_browning_m2"} {group "battle"} {accept "browning_m2_stan"} {block_on_collect "maxim mg_stan 1 4 browning mg34_sit"} {rotate_limit 45}}
		{place "mg34_sit" {obstacle disable} {attach snipe_cover} {linkbone "attach_mg34_sit"} {group "battle"} {accept "mg34_sit"} {block_on_collect "maxim mg_stan 1 browning browning_m2"} {rotate_limit 45}}
	}
	("place_battle_inside" name(5) offset(0 -5))
	("place_battle_inside" name(6) offset(0 5))
	("add_trench_climb_bones" args 1 15)
	("add_trench_climb_bones" args 2 -15)
	("boarder")
	("volume_pit")
	("volume_place")
	{volume "place"
		{position	0.0087 	 8.0621 	 7.9213}
	}
	("volume_target_fg")
	{extender "fortification"
		("extender_common_settings")
		{unity_actor "trench_actor"}
		("socket_with_plug" id(0))
		("socket_with_plug" id(1))
		{socket "socket2"
			{accept "trench_grass_segment"}
			{angle 90}
			{replace "trench_grass_cell_three_sided"}
		}
		{socket "socket3"
			{accept "trench_grass_segment"}
			{angle 90}
			{replace "trench_grass_t_crossroad"}
		}
		("install_time" t(18.0))
		{crush
			{bones_enable "ground_x grass_x"} 		; if crushed these bones will be enabled
			{bones_disable "ground grass attach1 attach2"} 	; if crushed these bones will be disabled
		}
		{places
			{disable_by_bones
				{"1" "ground_x"}            	; если хоть одна из костей видима, плейс будет выключен и юнит в нем убит
				{"2" "ground_x ground_x0"}
				{"3" "ground_x ground_x1"}
				{"4" "ground_x"}
				{"maxim" "ground_x"}
				{"browning_m2" "ground_x"}
				{"browning" "ground_x"}
				{"mg_stan" "ground_x"}
				{"mg34_sit" "ground_x"}
			}
;			{union "1 4"}                   ; можно занять только одно из этих мест
		}
	}
}
