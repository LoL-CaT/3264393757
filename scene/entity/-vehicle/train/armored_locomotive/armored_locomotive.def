{actor
	(include "/properties/railway.ext")
	(include "/properties/shadow/marine.inc"  scaleX(2.3) scaleY(1.0))
	(include "/properties/car_crew.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.5))
	{targetClass "tank"}
    {mass 200000}
	{Chassis
		{Locomotion ("locomotion")
			{MaxSpeed	20	}		; максимальная скорость, kmph
			{StartTime	3	}		; время разгона до макс. скорости с 0, seconds
			{BrakeTime	3	}		; время торможения с макс. скорости до 0, seconds
		}
	}
	{Extension "armored_locomotive.mdl"}
	{props "vehicle" "steel" "train_part" "steam_locomotive" }
	{placer
		{place "driver" {group "driver"} 	{linkbone "driver"} {turnoff {sensor} {shadow}}}
		{place "seat01" {group "passanger"} {linkbone "seat01"} {turnoff {sensor} {shadow}}}
		{place "seat02" {group "passanger"} {linkbone "seat02"} {turnoff {sensor} {shadow}}}
		{place "seat03" {group "passanger"} {linkbone "seat03"} {turnoff {sensor} {shadow}}}
		{place "seat04" {group "passanger"} {linkbone "seat04"} {turnoff {sensor} {shadow}}}
	}
	{boarder
		{anm "driver_left"
			{forward	{begin	"board_steam_locomotive"} {end "seat_driver_car"} {base "doorleft"}}
			{reverse 	{end	"board_steam_locomotive" -1} {base "doorleft" -1}}
		}
		{anm "driver_right"
			{forward	{begin	"board_steam_locomotive"} {end "seat_driver_car"} {base "doorright"}}
			{reverse 	{end	"board_steam_locomotive" -1} {base "doorright" -1}}
		}
		{door "emit"}
		{door "emit1"}
		{link "emit" "driver" 	{anm "driver_left"} {forward putoff} {reverse puton}}
		{link "emit1" "driver"	{anm "driver_right"} {forward putoff} {reverse puton}}

		{link "emit" "seat01" {anm "driver_left"} {forward putoff} {reverse puton}}
		{link "emit" "seat02" {anm "driver_left"} {forward putoff} {reverse puton}}
		{link "emit" "seat03" {anm "driver_left"} {forward putoff} {reverse puton}}
		{link "emit" "seat04" {anm "driver_left"} {forward putoff} {reverse puton}}

		{link "emit1" "seat01" {anm "driver_right"} {forward putoff} {reverse puton}}
		{link "emit1" "seat02" {anm "driver_right"} {forward putoff} {reverse puton}}
		{link "emit1" "seat03" {anm "driver_right"} {forward putoff} {reverse puton}}
		{link "emit1" "seat04" {anm "driver_right"} {forward putoff} {reverse puton}}		
	}

	{Volume "wheels_left"
		{thickness 10}
	}
	{Volume "wheels_right"
		{thickness 10}
	}
	{Volume "engine"
		{thickness 250}
	}
	{Volume "cabin"
		{thickness 250}
		{component "cabin"}
	}
	{component "cabin"
	}
	{component "body"
	}

	{Volume "body"
		{thickness 250}
		{component "body"}
	}
}