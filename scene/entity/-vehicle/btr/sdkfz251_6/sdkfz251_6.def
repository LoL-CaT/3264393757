	{extension "crew.ext"}
	{props "vehicle" "armored_car" "tank" "turret" "wheeled" "explosion_throw_crew"}

	{extender "shield"
		;(mod "mp"
			{on}
		;)
	}

	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 15}   
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{volume "body3"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{volume "body4"
		{tags "body"}
		{component "body"}
		{thickness 15}
	}
	{volume "body5"
