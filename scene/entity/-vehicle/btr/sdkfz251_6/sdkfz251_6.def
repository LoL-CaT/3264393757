		{Thickness 5}
		{able {visible 1}}
	}
	{volume "engine"
		{thickness 20}
	}
	{Volume "fuel"
		{thickness 1}
	}
	{Volume "detail1"
		{thickness 6}
	}
	{Volume "detail2"
		{thickness 6}
	}
