{entity
	(include "/properties/car.ext")
	(include "/properties/shadow/tank.inc"  scale(0.8))
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{props "vehicle" "car" "wheeled" "turn_over" "vision_lev01" "spotter" "one_hand_mgun_anm"}
	{PatherId "vehicle.small"}
	("armor_light" args 0.7);thickness 7
	{armor {health 223}}
	
	{extender "enumerator"}

	{Volume "Body"
		{tags "body"}
		{component "body"}
		{thickness 7}
	}

	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("components_car" 
		repair_body(20)
		repair_engine(10)
		repair_wheel(5)
	)

	("crew_2_human")
	("crew_human" place(gunner) bone(gunner) door(emit3) animation(gunner))
	{placer
		{place "driver"		{group "driver"} {visor "driver"}}
		{place "commander"	{group "driver"} {visor "main"}}
		{place "gunner"		{group "driver"} {visor "main"} {turnoff {targetable 0}}}
	}

	("board_animation" place(driver) board_begin(board_willis_driver) board_end(driver_car_small) base(doorleft))
	("board_animation" place(commander) board_begin(board_willis) board_end(passenger_car_small) base(doorright))
	{boarder
		{anm "gunner"
			{forward {begin "board_LowTank_stand"} {end "vehicle_mgun_1hand"}}
			{reverse {end "emit_tank_1_hold" 1}}
		}
	}

	{sensor
		{visor "driver"
			{bone "visor1"}
			{vision "moto_crew"}
		}
		{visor "main"
			{bone "visor2"}
			{vision "vehicle_top_mgun"}
		}
	}

	{extender "inventory"
		{weapon "mgun"
			{mask "weapon mgun"}
		}
		{Box
		{clear}
		{item "repair_kit" {cell 0 0}}
		{item "can" filling "fuel" 60}
		{item  "ammo mgun" 1200}
		{item "browning_m19_vh_car" filled {user "mgun"}}
		}
	}
	{Weaponry
		{place "mgun"
			{charger "gunner"}
			{LinkBone "mgun1"}
			{LinkAnimation "off"}
			("abm_mgun")
			{basic}			
		}
	}
	
	{mass 1160}
	{Chassis
		{Locomotion ("locomotion")
			{MaxSpeed	40}
			{StartTime	2}		
			{maxSpeedAtMaxTurn 25}
			{BrakeTime	1}		
			{StopTime	1}
			{TurnRadius	4}
			{Gears		0.1 0.5 0.8 1.0}
			{RearGears	0.5}
			{SteerOn	20}
			{SteerOff	40}
			{SplineRadius 1}
		}
		("fuelbag"
			volume(475)
			rate(50)
			remain(475)
		)
		{MaxTrailerMass 1675}		
		("car_trace" fx("tracewheel01a") step(0.08) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel01a") step(0.08) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
	}
	("chassis_add" speed(105))
	{Extension "willysmb.mdl"}
    ("animation_resume")

	{texmod "d"}

	{bone "gun_rot"
		{limits -25 20}
		{speed 0.05}
	}
	{bone "turret"
		{speed 0.05}
        {limits -80 80}		
	}
	{extension "crew.ext"}
	{extension "sensor.ext"}
}