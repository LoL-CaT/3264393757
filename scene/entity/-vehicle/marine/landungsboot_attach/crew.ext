;SDL
(define "define_place"
	{placer
		{place "%place"
			{Group "crew"}
			{LinkBone "%place"}
			{turnoff {sensor} {shadow}}
		}
	}
)

("define_place" place(driver))
("define_place" place(gunner1))
("define_place" place(gunner2))

{boarder
	{door "emit1"}
	{door "emit2"}
