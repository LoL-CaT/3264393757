	{door "emit4"}

	{link "emit3"	"driver"	{forward putoff} {reverse puton} {anm "driver"}}
	{link "emit2"	"gunner1"	{forward putoff} {reverse puton} {anm "gunner"}}
	{link "emit1"	"gunner2"	{forward putoff} {reverse puton} {anm "gunner"}}

	{anm "driver"
