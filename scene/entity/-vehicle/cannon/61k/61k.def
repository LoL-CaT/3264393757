{entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc"  scale(0.6))
	{props "vehicle" "cannon" "flak" "barrel1" "wheeled" "turret" "turret_rotator" "vision_lev03_can" "round_sandbag2" "level02" "art_spec" "texmod_w_cf_cd" "anm_61k"}
	{Extension "61k.mdl"}
	(include "/properties/selection/cannon.inc"  scale(0.7))
	{PatherID "cannon.large"}

	("trench_cannon")
	("round_sandbag_flak")
	("round_dot2")
	
	{targetSelector "cannon_autocannon_aa"}

	{placer	
		{place "gunner" {visor "main"} {useVision 0}}
		{place "commander" {visor "main"} {useVision 0}}
	}	

	{Volume "body*"
		{thickness 10}
		{tags "body"}
		{component "body"}
	}
	{Volume "turret*"
		{thickness 10}
		{tags "turret"}
		{component "turret"}
	}
	("armor_light_hp" hp(200))
	("v_gun" n(_rot_01))
	("v_gun" n(_rot_02))
	("v_gun" n(_rot_03))
	("v_gun" n(_rot_04))

	("wheel" args "wheelright1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft1")
	("wheel" args "wheelleft2")

	("crew_wheeled_gun")
	("crew_2_supporter_any_set"
		place_l1(charger_l1)
		place_r1(charger_r1)
	)
	{boarder
		{anm "gunner"
			{forward	{end "cannon_aa_gunlayer_2" 10}}
		}
		{anm "commander"
			{forward	{end "cannon_aa_gunlayer_2" 10}}
		}
		{anm "charger_r1"
			{forward {end "artillery_support_r" 10}}
		}
		{anm "charger_l1"
			{forward {end "artillery_support_l" 10}}
		}
		{anm "driver1"
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"
			{forward {end "cannon_crew" 10}}
		}
		{anm "seat3"
			{forward {end "cannon_crew" 10}}
		}
		{anm "seat2"
			{forward {end "cannon_crew" 10}}
		}
	}
	
	{extender "inventory"
		{box
			{item "bullet37 ap rus zenite" 150}
			{item "bullet37 fg rus zenite" 150}
			{item "sandbag_kit2"}
			{item "repair_kit"}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "37mm_61-k" filled}
			("abm_zenite")
		}
	}

	{extender "cannon"
		("attach_time")
		{animation
			{aim "cannon_61k_aim_hor" "cannon_61k_aim_vert" "" ""}
			{fire	"cannon_61k_reaction_l" "cannon_61k_reaction_r" "" ""}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right" "mgun_browning_driver_r" "mgun_browning_driver_l"}
			{reload  "" "" "" ""}
			{switch "close"}
		}
		{driver {workers "driver1" "driver2"}}
		{move {obstacle "close"}{workers "driver1" "driver2" "driver_l1" "driver_r1"}}
		{attack {obstacle "open"} {workers "gunner" "commander" "charger_l1" "charger_r1"}}
		{trailing {workers "seat1" "seat2" "seat3" "seat4"}}
	}
	{mass 2100}
	
	{bone "turret"
		{speed 0.035}
	}
	{bone "gun_rot"
		{limits -5 85}
		{speed 0.01}
	}	
	{extension "sensor.ext"}
	{extension "camouflage.ext"}
	{Chassis "human_carrier"
		("arena_flak_stan_4gunners_carrier")
	}
	{extender "bone_rotator"
		{"look_at.gun_rotator1" {bone "gun_rotator2"} {on}}
		{"look_at.gun_rotator2" {bone "gun_rotator1"} {on}}
		{"look_at.gun_rotator3" {bone "gun_rotator4"} {on}}
		{"look_at.gun_rotator4" {bone "gun_rotator3"} {on}}
	}
}