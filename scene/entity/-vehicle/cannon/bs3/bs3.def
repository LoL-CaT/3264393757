{game_entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc"  scale(0.6))
	{props "vehicle" "cannon" "heavy" "anm_heavy" "wheeled" "vision_lev05_can" "round_sandbag2" "art_point" "level05" "texmod_w_cf_cd" "muzzle_brake"}
	{extension "bs3.mdl"}
	(include "/properties/selection/cannon.inc"  scale(0.7))
	("round_sandbag2")
	("round_dot2")
	("trench_cannon")	
	{PatherId "cannon.large"}

	("wheel" args "wheelr")
	("wheel" args "wheell")

	("v_gun" n(01))
	("v_gun" n(02))
	("v_gun" n(_rot))
	{volume "turret*"
		{tags "turret"}
		{component "turret"}
	}
	("armor_heavy_hp" hp(250))
	
	("crew_wheeled_gun")
	("crew_2_supporter_any_set"
		place_l1(charger_l1)
		place_r1(charger_r1)
	)
	{boarder
		{anm "gunner"
			{forward	{end "cannon_big_gunner" 10}}
		}
		{anm "commander"
			{forward	{end "cannon_big_commander" 10}}
		}
		{anm "charger_r1"
			{forward {end "artillery_support_r" 10}}
		}
		{anm "charger_l1"
			{forward {end "artillery_support_l" 10}}
		}
		{anm "seat1"
			{forward {end "cannon_crew" 10}}
		}
		{anm "seat2"
			{forward {end "cannon_crew" 10}}
		}
		{anm "seat3"
			{forward {end "cannon_crew" 10}}
		}
		{anm "seat4"
			{forward {end "cannon_crew" 10}}
		}
		{anm "driver1"
		} 
		{anm "driver2"
		}
	}
	{extender "inventory"
		{box
			{item "bullet100 ap rus std" 19}
			{item "bullet100 fg rus std" 19}
			{item "sandbag_kit2"}
			{item "dot_kit"}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "100mm_bs3" filled}
			{Rotate}
			("abm_field_gun")
		}
	}
	{mass 3650}
	
	{extender "cannon"
		("attach_time")
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right" "mgun_browning_driver_r" "mgun_browning_driver_l"}
			{aim "cannon_big_commander_aim" "" "" ""}
			{fire  "cannon_big_commander_reaction" "cannon_big_charger_reaction" "cannon_big_support_r_reaction" "cannon_big_support_l_reaction"}
			{reload  "cannon_big_commander_charge" "cannon_big_charger_charge" "cannon_big_support_charge_l" "cannon_big_support_charge_r" "" ""}
		}
		{driver {workers "driver1" "driver2"}}
		{move {obstacle "close"} {workers "driver1" "driver2" "driver_l1" "driver_r1"}}
		{attack {obstacle "open"} {workers "gunner" "commander" "charger_l1" "charger_r1"}}
		{trailing {workers "seat1" "seat2" "seat3" "seat4"}}
;		{rotate_ik_Limit 30}
	}

	{Chassis "track"
		("car_trace" fx("tracewheel03") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("loco_medium")
    }
	{bone "turret"
		{limits -15 15}
		{speed 0.01}
	}
	{bone "gun_rot"
		{limits -16 30}	
		{speed 0.01}
	}
	{bone "basis"
	    {limits}
	    {speed 0.01}
	}
	{extension "camouflage.ext"}	
	{extension "sensor.ext"}
	{Chassis "human_carrier"
		("arena_cannon_heavy_4gunners_carrier")
	}
	{extender "bone_rotator"
		{"look_at.gun_rotator1" {bone "gun_rotator2"} {on}}
		{"look_at.gun_rotator2" {bone "gun_rotator1"} {on}}
	}	
}