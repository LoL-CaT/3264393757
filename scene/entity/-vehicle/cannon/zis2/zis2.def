{entity
	(include "/properties/cannon.ext")
	(include "/properties/shadow/tank.inc"  scale(0.5))
	{Extension "zis2.mdl"}
	(include "/properties/selection/cannon.inc"  scale(0.7))
	{props "vehicle" "cannon" "medium" "wheeled" "round_sandbag2" "vision_lev03_can" "art_point" "level03" "texmod_w_cf_cd"}
	
	{volume "body*"
		{tags "body"}
		{component "body"}
	}
	("v_gun" n(_rot01))
	("v_gun" n(_rot02))
	("v_gun" n(_rot03))
	("v_stand")
	{volume "turret*"
		{tags "turret"}
		{component "turret"}
	}

	("armor_medium_hp" hp(200))
	("round_sandbag2")
	("round_dot2")
	("trench_cannon")
	("crew_wheeled_gun")
	("crew_2_supporter_any_set"
		place_l1(charger_l1)
		place_r1(charger_r1)
	)
	{boarder
		{anm "gunner"
			{forward	{end "cannon_small_gunner" 10}}
		}
		{anm "commander"
			{forward	{end "cannon_small_commander" 10}}
		}
		{anm "charger_r1"
			{forward {end "artillery_support_r" 10}}
		}
		{anm "charger_l1"
			{forward {end "artillery_support_l" 10}}
		}
		{anm "seat1"
			{forward {end "cannon_crew" 10}}
		}
		{anm "seat2"
			{forward {end "cannon_crew" 10}}
		}
		{anm "seat3"
			{forward {end "cannon_crew" 10}}
		}
		{anm "seat4"
			{forward {end "cannon_crew" 10}}
		}
		{anm "driver1"
		} 
		{anm "driver2"
		}
	}

	("wheel" args "wheelright")
	("wheel" args "wheelleft")

	{extender "inventory"
		{box
			{item "bullet57 ap rus std" 50}
			{item "bullet57 fg rus std" 50}
			{item "sandbag_kit2"}
			{item "dot_kit"}
		}
	}
	{Weaponry
		{place "gun"
			{weapon "57mm_zis2" filled}
			{RestoreIKAfterAim}
			{Rotate}
			("abm_field_gun")
		}
	}

	{mass 1050}
	{extender "cannon"
		("attach_time")
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right" "mgun_browning_driver_r" "mgun_browning_driver_l"}
			{aim "cannon_small_commander_aim" "" "" ""}
			{fire  "cannon_small_commander_reaction" "cannon_small_charger_reaction" "cannon_small_support_l_reaction" "cannon_small_support_r_reaction"}
			{reload  "cannon_small_commander_charge" "cannon_small_charger_charge" "cannon_small_support_charge_l" "cannon_small_support_charge_r"}
		}
		{driver {workers "driver1" "driver2"}}
		{move {obstacle "close"} {workers "driver1" "driver2" "driver_l1" "driver_r1"}}
		{attack {obstacle "open"} {workers "gunner" "commander" "charger_l1" "charger_r1"}}
		{trailing {workers "seat1" "seat2" "seat3" "seat4"}}
;		{rotate_ik_Limit 17}
	}

	{Chassis "track"
		("car_trace" fx("tracewheel03") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("loco_medium")
	}
	{bone "turret"
		{limits -28 28}
		{speed 0.025}
	}
	{bone "gun_rot"
		{limits 45 -10}	
		{speed 0.01}
	}
	{bone "basis"
		{limits}
		{speed 0.01}
	}
	{extension "sensor.ext"}
	{extension "camouflage.ext"}
	{Chassis "human_carrier"
		("arena_cannon_medium_4gunners_carrier")
	}
	{extender "bone_rotator"
		{"look_at.gun_rotator1" {bone "gun_rotator2"} {on}}
		{"look_at.gun_rotator2" {bone "gun_rotator1"} {on}}
		{"look_at.gun_rotator3" {bone "gun_rotator4"} {on}}
		{"look_at.gun_rotator4" {bone "gun_rotator3"} {on}}
	}
}